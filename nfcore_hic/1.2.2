proc ModulesHelp { } {

    puts stderr "This module adds nextflow and the nf-core hi-c pipeline to your environment."
    puts stderr ""
    puts stderr ""
    puts stderr "NOTE:  This is nextflow version 20.07.1.5412"
    puts stderr ""
}

module-whatis "Adds nextflow (20.07.1.5412 version) and the nf-core hi-c pipeline (1.2.2 version) to your environment."

module unload java
module load java/1.8.0_92
module load blic-modules
module load nextflow/20.07.1.5412


set              nextflow_home     /shared/ucl/depts/cancer/apps/nextflow/20.07.1.5412/
set              hic_pipeline     /shared/ucl/depts/cancer/apps/nextflow_pipelines/nfcore_hic/hic-1.2.2/

setenv           NEXTFLOW_HOME     $nextflow_home
setenv           HIC_PIPELINE      $hic_pipeline

prepend-path     PATH              $::env(MODULESHOME)/bin
prepend-path     PATH              $nextflow_home
prepend-path     PATH              $hic_pipeline


set-alias        nfcore_hic        "nextflow run $hic_pipeline -profile myriad"


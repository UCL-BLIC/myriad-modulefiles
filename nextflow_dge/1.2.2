proc ModulesHelp { } {

    puts stderr "This module adds nextflow and the nf-core chipseq pipeline to your environment."
    puts stderr ""
    puts stderr ""
    puts stderr "NOTE:  This is nextflow version 20.07.1.5412"
    puts stderr ""
}

module-whatis "Adds nextflow (20.07.1.5412 version) and the nf-core chipseq pipeline (1.2.2 version) to your environment."

module unload java
module load java/1.8.0_92
module load blic-modules
module load nextflow/20.07.1.5412


set              nextflow_home     /shared/ucl/depts/cancer/apps/nextflow/20.07.1.5412/
set              chipseq_pipeline     /shared/ucl/depts/cancer/apps/nextflow_pipelines/nfcore_chipseq/chipseq-1.2.2/

setenv           NEXTFLOW_HOME     $nextflow_home
setenv           CHIPSEQ_PIPELINE     $chipseq_pipeline

prepend-path     PATH              $::env(MODULESHOME)/bin
prepend-path     PATH              $nextflow_home
prepend-path     PATH              $chipseq_pipeline


set-alias        nfcore_chipseq      "nextflow run $chipseq_pipeline -profile myriad"

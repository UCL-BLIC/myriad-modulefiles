proc ModulesHelp { } {

    puts stderr "This module adds nextflow and the nf-core rnaseq pipeline to your environment."
    puts stderr ""
    puts stderr ""
    puts stderr "NOTE:  This is nextflow version 19.10.0.5170"
    puts stderr ""
}

module-whatis "Adds nextflow (19.10.0.5170 version) and the nf-core rnaseq pipeline (1.4.2 version) to your environment."

module unload java
module load java/1.8.0_92
module load nextflow/19.10.0.5170


set              nextflow_home     /shared/ucl/depts/cancer/apps/nextflow/19.10.0.5170/
set              rnaseq_pipeline     /shared/ucl/depts/cancer/apps/nextflow_pipelines/nfcore_rnaseq/rnaseq-1.4.2/

setenv           NEXTFLOW_HOME     $nextflow_home
setenv           RNASEQ_PIPELINE     $rnaseq_pipeline

prepend-path     PATH              $::env(MODULESHOME)/bin
prepend-path     PATH              $nextflow_home
prepend-path     PATH              $rnaseq_pipeline


set-alias        nfcore_rnaseq      "nextflow run $rnaseq_pipeline -profile myriad"
